#include<iostream>
using namespace std;
int main(){
	int r,c;
	int i,j,k,count;
	cout<<"Enter Number of Rows: "<<endl;
	cin>>r;
	cout<<"Enter Same Number for Columns: "<<endl;
	cin>>c;
	int a[r][c];
	while(r==c){
		cout<<"Enter Values for Matrix: "<<endl;
		for(int i=0; i<r; i++){
			for(int j=0; j<c; j++){
				cin>> a[i][j];
			}
	}
	for(i=0; i<r; i++){
		for(j=0; j<c; j++){
			if(a[i][j]==0){
				count++;
			}
		}
	}
	cout<<"Total Number of Zeroes in Matrix is: "<<count<<endl;
}
}
